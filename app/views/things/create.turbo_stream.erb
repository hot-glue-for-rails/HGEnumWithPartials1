<% if @thing.errors.none? %>
  <%= turbo_stream.replace "__things-list" + "" do %>
  <%= render partial: "list", locals: {things: @things} %>
  <% end %>
  <% end %>

  <%= turbo_stream.replace "__thing__thing-new" do %>
  <% if @thing.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {thing: @thing} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices", locals: {resource: @thing} %>

<% end %>
